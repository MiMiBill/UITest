<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FF995F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/toList"
        android:text="到列表"
        android:background="#ccc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/toWave"
        android:text="到波纹"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/input"
        app:layout_constraintTop_toBottomOf="@id/toWave"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"
        android:background="#453"
        android:layout_width="100dp"
        android:layout_height="40dp"/>

    <com.example.uitest.RoundImage
        android:id="@+id/iv_imageview_round"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_imageview"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/iv_imageview_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.example.uitest.MyMoon
        android:id="@+id/moon"
        app:layout_constraintTop_toBottomOf="@id/iv_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <ImageView
        android:id="@+id/iv_sceenCap"
        android:layout_marginTop="10dp"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/moon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="100dp"
        android:layout_height="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>